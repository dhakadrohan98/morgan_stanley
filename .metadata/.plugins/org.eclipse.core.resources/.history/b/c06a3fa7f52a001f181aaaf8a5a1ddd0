package com.wissen;

public class SubsequenceOfString {

	StringBuilder sb = new StringBuilder();
	public static int longestPalindromeSubseq(String s) {
        int i = 0;
        String str = "";
        System.out.println(helper(str, s, i));
        return 0;
    }
	
	public static StringBuilder helper(StringBuilder sb, String orginal, int i) {
        //base case
        if(i >= orginal.length()) {
            return str;
        }
        
        //pick
        sb.append(orginal.charAt(i)) + helper(sb,orginal,i+1);
        //not pick
        str = str + helper(str,orginal,i+1);
        return str;
        
    }
	
	public static void main(String[] args) {
		String s = "bbbab";
		longestPalindromeSubseq(s);

	}

}
