package com.wissen.dsa2;

import java.util.*;

public class LongestPalindromicSubstring {

	public String longestPalindrome(String str) {
		Map<Character, Boolean> hmap = new HashMap<>();
		int n = str.length();
		int longest = 0;
		String res = "";
		
		for(int i=0; i<n; i++) {
			for(int j=i+1; j<=n; j++) {
				boolean isPalindrom = isPaindrome(str, i, j-1, hmap);
				if(isPalindrom == true) {
					if(j-i > longest) {
						longest = j-i;
						res = str.substring(i, j);
					}
				}
			}
		}
	}
	
	private boolean isPaindrome(String str, int i, int j, Map<Character, Integer> hmap) {
		int key = i+""+j;
		//base case
		if(hmap.containsKey(key)) {
			return hmap.get(key);
		}
	}

	public static void main(String[] args) {
		
	}

}
