package com.wissen;

import java.util.*;

public class SubsequenceOfString {

	public static List<String> longestPalindromeSubseq(String s) {
        int i = 0;
        String result = "";
        return generateSubsequences(s, i, result);
    }
	
	public static List<String> generateSubsequences(String s, int i, String result) {
		List<String> subsequences = new ArrayList<String>();
        //base case
        if(i >= s.length()) {
        	subsequences.add(result);
        	return subsequences;
        }
        
       //pick
       subsequences.addAll(generateSubsequences(s, i+1, result+s.charAt(i)));
       //not pick
       subsequences.addAll(generateSubsequences(s, i+1, result));
       //List<String> subsequences
       return subsequences;
        
    }
	
	public static void main(String[] args) {
		String s = "bbbab";
		List<String> subsequences = longestPalindromeSubseq(s);
		for(String str:subsequences) {
			System.out.println(str);
		}

	}

}
