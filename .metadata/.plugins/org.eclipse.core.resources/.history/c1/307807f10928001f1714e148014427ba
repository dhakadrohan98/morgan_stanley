package com.wissen.concurrent.collection;

import java.util.ArrayList;
import java.util.List;

public class NonThreadSafeExample {

	public static void main(String[] args) {
		List<String> list = new ArrayList<>();
		list.add("first");
		list.add("sec");
		list.add("third");
		list.add("fourth");
		list.add("fifth");
		
		Runnable t1 = () -> {
			//thread-1
			for(String str: list) {
				System.out.println(list);
				try {
					Thread.sleep(1000);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
		};
		
		Runnable t2 = () -> {
			//thread-2
			list.add("new item-1");
			list.add("new item-2");
			list.add("new item-3");
			
		};
		
		//starting thread
		new Thread(t1).start();
		new Thread(t2).start();

	}

}
